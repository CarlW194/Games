<MenuScreen>:
	btn: begin
	
    Button:
        opacity: 1 if self.state == 'normal' else .5
		id: begin
		text: 'Begin Funny Windows'
        background_normal: 'Bebras.png'
        background_down: 'BebrasClick.png'
		on_press:
			root.manager.transition.direction = 'left'
			root.manager.current = 'game01'
		color: (0,0,0)

<Game01Screen>
    BoxLayout:
        size_hint: 1, 1
        orientation: 'vertical'
        spacing: '5dp'
        Label:
            text: "Funny Windows"
            font_size: 50
        Label:
            halign: 'left'
            text: "The windows of a boat are either clear or lightly tinted."
            font_size: 20
            top: root.top - 150
        Label:
            halign: 'left'
            text: "Standing beside the boat you can look through two opposite windows at once. Depending on the colours of both windows they will appear to have a new colour:"
            font_size: 20
            text_size: self.width, None
            top: root.top -125
        BoxLayout
            Image:
                source: "Binary0.png"
                size: 360, 360
            Image:
                source: "Binary1.png"
                size: 360, 360
            Image:
                source: "Binary01.png"
                size: 360, 360
            Image:
                source: "Binary2.png"
                size: 360, 360
        BoxLayout:
            Button:
                text: 'Quit'
                size_hint: .5, .5
                pos: 0.5, 1
                on_press:
                    root.manager.transition.direction = 'right'
                    root.manager.current = 'menu'
            Button:
                text: 'Next'
                size_hint: .5, .5
                pos: 0.5, 1
                on_press:
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'leftboatview'

<LeftBoatViewScreen>
    BoxLayout:
        size_hint: 1, 1
        orientation: 'vertical'
        spacing: '5dp'
        Label:
            text: "Funny Windows"
            font_size: 50
        Label:
            text: "Captain Krysta has given you drawings of her boat showing which windows are clear and which are lightly tinted:" 
        BoxLayout
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size 
            Image:
                source: "BoatLeft.png"
                size: 720, 580
            Image:
                source: "BoatRight.png"
                size: 720, 580
        BoxLayout:
            padding: [0 , 75, 0, 0]
            Button:
                text: 'Quit'
                size_hint: .5, .5
                pos: 0.25, .5
                on_press:
                    root.manager.transition.direction = 'right'
                    root.manager.current = 'menu'
            Button:
                text: 'Page Before'
                size_hint: .5, .5
                pos: 0.25, .5
                on_press:
                    root.manager.transition.direction = 'right'
                    root.manager.current = 'game01'
            Button:
                text: 'Next'
                size_hint: .5, .5
                pos: 0.25, .5
                on_press:
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'emptyboat'

